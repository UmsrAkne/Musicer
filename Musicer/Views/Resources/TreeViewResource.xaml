<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <HierarchicalDataTemplate
        x:Key="hierarchicalDataTemplate"
        DataType="local:ExtendFileInfo"
        ItemsSource="{Binding ChildDirectories}">

        <HierarchicalDataTemplate.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="2,0" />

                <Style.Triggers>
                    <MultiDataTrigger>
                        <MultiDataTrigger.Conditions>

                            <Condition Binding="{Binding HasSoundFile}" Value="False" />
                            <Condition Binding="{Binding HasChildDirectory}" Value="False" />

                        </MultiDataTrigger.Conditions>

                        <Setter Property="Opacity" Value="0.4" />

                    </MultiDataTrigger>
                </Style.Triggers>
            </Style>
        </HierarchicalDataTemplate.Resources>

        <TextBlock Text="{Binding Name}" />

    </HierarchicalDataTemplate>

    <Style x:Key="TreeViewItemContainerStyle" TargetType="TreeViewItem">
        <Setter Property="IsExpanded" Value="{Binding IsExpanded}" />
        <Setter Property="Padding" Value="5,0" />
    </Style>

</ResourceDictionary>