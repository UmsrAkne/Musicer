<Window
    x:Class="Musicer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:models="clr-namespace:Musicer.Models.Converters"
    xmlns:prism="http://prismlibrary.com/"
    x:Name="window"
    Title="{Binding Title}"
    Width="1024"
    Height="700"
    prism:ViewModelLocator.AutoWireViewModel="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ListViewResource.xaml" />
                <ResourceDictionary Source="Resources/TreeViewResource.xaml" />
                <ResourceDictionary Source="Resources/ButtonResource.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <models:TimeSpanConverter x:Key="TimeSpanConverter" />

            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="14" />
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ContentControl prism:RegionManager.RegionName="ContentRegion" />

        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2">

            <Menu>
                <MenuItem Header="File" />
                <MenuItem Command="{Binding ShowSettingWindowCommand}" Header="Setting" />
            </Menu>

            <TextBlock Margin="5,1" Text="{Binding CurrentDirectoryPath}" />

        </StackPanel>

        <TreeView
            Name="treeView"
            Grid.Row="1"
            Grid.Column="0"
            ItemContainerStyle="{StaticResource TreeViewItemStyle1}"
            ItemTemplate="{StaticResource ResourceKey=hierarchicalDataTemplate}"
            ItemsSource="{Binding Directories}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectedItemChanged">
                    <i:InvokeCommandAction Command="{Binding SetTreeViewSelectedItemCommand}" CommandParameter="{Binding ElementName=treeView}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TreeView>

        <ListView
            Grid.Row="1"
            Grid.Column="1"
            HorizontalContentAlignment="Stretch"
            AlternationCount="2"
            ItemContainerStyle="{StaticResource ResourceKey=ListViewItemContainerStyle}"
            ItemTemplate="{StaticResource ResourceKey=listViewTemplate}"
            ItemsSource="{Binding Musics}"
            SelectedIndex="{Binding SelectedSoundIndex}" />

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="60"
            Padding="0,1,1,0">

            <Grid Margin="0,5,0,0">

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal">

                    <Button
                        Grid.Row="0"
                        Width="100"
                        Margin="5,0"
                        VerticalAlignment="Top"
                        Command="{Binding PlayCommand}"
                        Content="Play"
                        Template="{StaticResource buttonTemplate}" />

                    <Button
                        Grid.Row="0"
                        Width="100"
                        Margin="5,0"
                        VerticalAlignment="Top"
                        Command="{Binding StopCommand}"
                        Content="Stop"
                        Template="{StaticResource buttonTemplate}" />
                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Horizontal">

                    <TextBlock Margin="5,0" Text="{Binding SoundViewer.PlayingMusicName}" />

                    <TextBlock Margin="10,0" Text="{Binding SoundViewer.CurrentTime, Converter={StaticResource TimeSpanConverter}}" />

                    <TextBlock Margin="10,0" Text="/" />

                    <TextBlock Margin="10,0" Text="{Binding SoundViewer.TotalTime, Converter={StaticResource TimeSpanConverter}}" />

                </StackPanel>

                <ProgressBar
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Height="5"
                    VerticalAlignment="Bottom"
                    Background="PaleGreen"
                    Foreground="LimeGreen"
                    Maximum="{Binding SoundViewer.TotalTime.Ticks, Mode=OneWay}"
                    Value="{Binding SoundViewer.CurrentTime.Ticks, Mode=OneWay}" />

            </Grid>
        </Border>

        <StatusBar
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <StatusBarItem Content="statusBar" />
        </StatusBar>

    </Grid>
</Window>
